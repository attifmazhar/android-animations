<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cc_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.keyframeanimation.ShoppingKeyFrameAnimation">

    <android.support.v7.widget.CardView
        android:id="@+id/product_card_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_padding_16"
        android:elevation="16dp"
        app:cardCornerRadius="@dimen/margin_padding_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_shopping_activity_invisble_size"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>